# --- db.py ---
import sqlite3

def get_connection():
    return sqlite3.connect("data.db", check_same_thread=False)

def create_users_table():
    conn = get_connection()
    c = conn.cursor()
    c.execute('''CREATE TABLE IF NOT EXISTS users (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        name TEXT NOT NULL,
        email TEXT NOT NULL UNIQUE,
        password TEXT NOT NULL,
        language TEXT,
        created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
    )''')
    conn.commit()
    conn.close()

def add_user(name, email, password, language):
    conn = get_connection()
    c = conn.cursor()
    c.execute('INSERT INTO users (name, email, password, language) VALUES (?, ?, ?, ?)', (name, email, password, language))
    conn.commit()
    conn.close()

def get_user(email, password):
    conn = get_connection()
    c = conn.cursor()
    c.execute('SELECT * FROM users WHERE email = ? AND password = ?', (email, password))
    user = c.fetchone()
    conn.close()
    return user

def get_all_users():
    conn = get_connection()
    c = conn.cursor()
    c.execute('SELECT id, name, email, language, created_at FROM users')
    data = c.fetchall()
    conn.close()
    return data
